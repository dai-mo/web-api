# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# App endpoints
GET     /                            controllers.HomeController.index

# Partial endpoints
GET     /partials/:partial              controllers.HomeController.modulePartials(module = "", partial)
GET     /partials/:module/:partial      controllers.HomeController.modulePartials(module, partial)

# Utility endpoints
GET     /api/health                     controllers.HomeController.health

# Documentation endpoints
GET     /api/doc                        controllers.HomeController.doc

# Test Api
->     /api/tests                       controllers.TestApi

# User Api
->     /api/users                       controllers.UserApi
GET    /api/users/:id/auth              controllers.UserApi.auth(id: Long)

# Flow Api
# - Templates Api
->     /api/flow/templates              controllers.FlowTemplateApi
# - Instance Api
->     /api/flow/instances              controllers.FlowInstanceApi
GET    /api/flow/instances/create/:tid  controllers.FlowInstanceApi.create(tid: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)
GET     /webjars/*file                  controllers.WebJarAssets.at(file)
GET     /vassets/*file                  controllers.Assets.versioned(path="/public", file: Asset)

# ----- Experimental ------

# An example controller showing how to write asynchronous code
GET     /message                        controllers.AsyncController.message